{% set default_decription = "Jazeetie" %}

<div class="card">
  <div class="card__content">
    <h2 class="card__title">
      <a class="arrow-link" href="#">
        <span class="arrow-link__text">
      {% if card_title %}
        {{ card_title }}
      {% else %}
        Kaartje zonder titel
      {% endif %}
        </span>
        <span class="arrow-link__icon"></span>
      </a>
    </h2>
    <p class="card__description">
      {% if card_description %}
        {{ card_description }}
      {% else %}
        Dit is de omschrijving van het kaartje. Hier kan de samenvatting in of de eerste tekst van de detailpagina.
      {% endif %}
    </p>
  </div>
</div>
